{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "declaration": false,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "outDir": "build",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
