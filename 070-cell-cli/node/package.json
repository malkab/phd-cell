{
  "name": "RENAME-ME",
  "version": "0.0.1",
  "description": "REWRITE-ME",
  "scope": "SCOPE-ME",
  "author": {
    "name": "MY-NAME",
    "email": "MY-EMAIL@EMAIL.COM",
    "url": "HTTP://MY-URL"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "keywords": [
    "PUT-NEW-KEYWORDS-HERE",
    "ANOTHER-ONE-HERE"
  ],
  "license": "UNLICENSED",
  "homepage": "https://github.com/owner/project#readme",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/malkab/code-samples.git"
  },
  "private": false,
  "scripts": {
    "package-json-version": "echo 2021-09-08",
    "clean": "rm -Rf build ; rm -Rf dist",
    "quick-test": "npm-run-all --parallel service:watch:quick-test:server service:build",
    "build": "yarn clean ; yarn service:build-main",
    "start": "npm-run-all --parallel service:watch:main:server service:build",
    "build-with-docs": "yarn clean ; yarn service:build-main ; yarn build-docs ; rm -Rf docs ; cp -R typedoc/build/html docs",
    "mocha": "npm-run-all --parallel service:watch:mocha:server service:build",
    "build-docs": "cd typedoc ; ./html ; cd ..",
    "service:build-main": "webpack --config webpack-production.config.js --progress",
    "service:build": "webpack --progress --watch",
    "service:watch:quick-test:server": "nodemon --delay 0 --inspect=0.0.0.0:9329 \"./build/quicktest.js\" --watch \"./build/quicktest.js\"",
    "service:watch:main:server": "nodemon --delay 0 --inspect=0.0.0.0:9229 ./build/main.js --watch ./build/",
    "service:watch:mocha:server": "nodemon --delay 0 --ext js --watch ./build/mocha.js --exec 'mocha --max-old-space-size=4096 --timeout 20000 ./build/mocha.js || true'"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.0.0",
    "@types/webpack-env": "^1.0.0",
    "chai": "^4.0.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "eslint": "^7.0.0",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.0",
    "npm-run-all": "^4.1.0",
    "terser": "^5.5.0",
    "terser-webpack-plugin": "^5.0.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.1.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "meow": "^10.1.1"
  }
}
